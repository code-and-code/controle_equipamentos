{% extends view('app') %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Entrada | Criar</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="/entrada/gravar" method="post">
                        <div class="form-group">
                            <label class="control-label" for="1">
                                Equipamento
                            </label>
                            <select class="js-example-basic-single form-control" name="equipamento_id" id="1" >
                                {% for equipamento in equipamentos %}
                                    <option value="{{  equipamento.id }}"> {{ equipamento.nome }} || {{ equipamento.modelo }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="1">
                                Nfe
                            </label>
                            <select class="js-example-basic-single form-control col-xs-6" name="nfe_id" id="1" >
                                {% for nfe in nfes %}
                                    <option value="{{  nfe.id }}"> {{ nfe.nfe }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-xs-4">
                                <label class="control-label" for="4">
                                    Qtd
                                </label>
                                <input required class="form-control" id="10" placeholder="" name="qtd" type="text" value="{{ model.Patrimonio.valor }}">
                            </div>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary">
                            Cadastrar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{%  endblock %}