{% extends view('app') %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Marca | Editar <a href="/equipamento/por_marca?id={{ marca.id}}" class="fa fa-user pull-right"></a></h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="/marca/atualizar" method="post">

                        <input type="hidden" name="id" value="{{ marca.id }}">
                        <div class="form-group">
                            <label class="control-label" for="2">
                                Nome
                            </label>
                            <input class="form-control" id="2" placeholder="" name="nome" type="text" value="{{ marca.nome }}">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Gravar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}