{% extends view('app') %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Periféricos | Criar</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="/periferico/gravar" method="post">
                        <div class="form-group">
                            <label class="control-label" for="1">
                                Equipamento
                            </label>
                            <select class="js-example-basic-single form-control" name="periferico[equipamento_id]" id="1" >
                                {% if model %}
                                    <option value="{{ model.equipamento_id }}">{{ model.Equipamento.nome }} || {{ model.Equipamento.modelo }}</option>
                                {% endif %}
                                {% for equipamento in equipamentos %}
                                    <option value="{{  equipamento.id }}"> {{ equipamento.nome }} || {{ equipamento.modelo }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="2">
                                Descrição
                            </label>
                            <input class="form-control" id="2" placeholder="" name="periferico[descricao]" type="text" value="{{ model.descricao }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="3">
                                Nfe
                            </label>
                            <input required class="form-control" id="3" placeholder="" name="periferico[nfe]" type="text" value="{{ model.nfe }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="4">
                                Data Da Compra
                            </label>
                            <input required class="form-control" id="4" placeholder="" name="periferico[data_compra]" type="date" value="{{ model.data_compra }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="5">
                                Valor
                            </label>
                            <input required class="form-control" id="5" placeholder="" name="periferico[valor]" type="text" value="{{ model.valor }}">
                        </div>

                        <br>

                        {% include('patrimonio/_inputs_patrimonio.code.twig') %}

                        <br>

                        <button type="submit" class="btn btn-primary">
                            Cadastrar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}