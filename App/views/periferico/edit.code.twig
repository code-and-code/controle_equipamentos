{% extends view('app') %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Periféricos | Criar</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="/periferico/atualizar" method="post">
                        <div class="form-group">
                            <label class="control-label" for="1">
                                Equipamento
                            </label>
                            <select class="js-example-basic-single form-control" name="periferico[equipamento_id]" id="1" >
                                <option value="{{ periferico.equipamento_id }}">{{ periferico.Equipamento().nome }} || {{ periferico.Equipamento().modelo }}</option>
                                {% for equipamento in equipamentos %}
                                    <option value="{{  equipamento.id }}"> {{ equipamento.nome }} || {{ equipamento.modelo }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="2">
                                Descrição
                            </label>
                            <input class="form-control" id="2" placeholder="" name="periferico[descricao]" type="text" value="{{ periferico.descricao }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="3">
                                Nfe
                            </label>
                            <input required class="form-control" id="3" placeholder="" name="periferico[nfe]" type="text" value="{{ periferico.nfe }}">
                        </div>

                        <br>

                        {% include('patrimonio/_inputs_patrimonio.code.twig') %}

                        <br>

                        <input value="{{ periferico.id }}" name="id" type="hidden">
                        <button type="submit" class="btn btn-primary">
                            Cadastrar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}