{% extends view('app') %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Periféricos | Criar</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="/periferico/gravar" method="post">
                        <div class="form-group">
                            <label class="control-label" for="1">
                                Equipamento
                            </label>
                            <select class="js-example-basic-single form-control" name="equipamento_id" id="1" >
                                {% for equipamento in equipamentos %}
                                    <option value="{{  equipamento.id }}"> {{ equipamento.nome }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="2">
                                Descrição
                            </label>
                            <input class="form-control" id="2" placeholder="" name="decricao" type="text" value="{{ periferico.descricao }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="3">
                                Nfe
                            </label>
                            <input class="form-control" id="3" placeholder="" name="nfe" type="text" value="{{ periferico.nfe }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="4">
                                Data Da Compra
                            </label>
                            <input class="form-control" id="4" placeholder="" name="data_compra" type="date" value="{{ periferico.data_compra }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="5">
                                Valor
                            </label>
                            <input class="form-control" id="5" placeholder="" name="valor" type="text" value="{{ periferico.valor }}">
                        </div>

                        <button type="submit" class="btn btn-primary">
                            Cadastrar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}