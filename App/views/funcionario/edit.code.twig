{% extends view('app') %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Funcion√°rio | Editar</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="/funcionario/atualizar" method="post">

                        <input type="hidden" name="id" value="{{ funcionario.id }}">
                        <div class="form-group">
                            <label class="control-label" for="2">
                                Nome
                            </label>
                            <input class="form-control" id="2" placeholder="" name="nome" type="text" value="{{ funcionario.nome }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="3">
                                Email
                            </label>
                            <input class="form-control" id="3" placeholder="" name="email" type="text" value={{ funcionario.email }}>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="4">
                                Telefone
                            </label>
                            <input class="form-control" id="4" placeholder="" name="telefone" type="text" value="{{ funcionario.telefone }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="5">
                                Ramal
                            </label>
                            <input class="form-control" id="5" placeholder="" name="ramal" type="text" value="{{ funcionario.ramal }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="1">
                                Setor
                            </label>
                            <select class="js-example-basic-single form-control" name="setor_id" id="1">
                                <option value="{{  funcionario.setor_id }}"> {{ funcionario.setor.nome }}</option>
                                {% for setor in setores %}
                                    <option value="{{  setor.id }}"> {{ setor.nome }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            Gravar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}