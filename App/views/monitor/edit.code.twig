{% extends view('app') %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Monitor | Editar</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="/monitor/atualizar" method="post">
                        <div class="form-group">
                            <label class="control-label" for="1">
                                Equipamento
                            </label>
                            <select class="js-example-basic-single form-control" name="equipamento_id" id="1">
                                {% for equipamento in equipamentos %}
                                    <option value="{{  equipamento.id }}"> {{ equipamento.nome }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="3">
                                Tela
                            </label>
                            <input class="form-control" id="3" placeholder="" name="tela" type="text" value="{{ monitor.tela }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="4">
                                Nfe
                            </label>
                            <input class="form-control" id="4" placeholder="" name="nfe" type="text" value="{{ monitor.tela }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="5">
                                Data Compra
                            </label>
                            <input class="form-control" id="5" placeholder="" name="data_compra" type="date" value="{{ monitor.data_compra }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="10">
                                Valor
                            </label>
                            <input class="form-control" id="10" placeholder="" name="valor" type="text" value="{{  monitor.value }}">
                        </div>
                        <input name="id" type="hidden" value="{{  monitor.id }}">
                        <button type="submit" class="btn btn-primary">
                            Cadastrar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}