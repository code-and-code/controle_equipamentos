{% extends view('app') %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Monitor | Editar</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="/monitor/atualizar" method="post">
                        <div class="form-group">
                            <label class="control-label" for="1">
                                Equipamento
                            </label>
                            <select class="js-example-basic-single form-control" name="monitor[equipamento_id]" id="1">
                                <option value="{{  monitor.Equipamento().id }}"> {{ monitor.Equipamento.nome }} || {{ monitor.Equipamento.modelo }}</option>
                                {% for equipamento in equipamentos %}
                                    <option value="{{  equipamento.id }}"> {{ equipamento.nome }} || {{ equipamento.modelo }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="3">
                                Tela
                            </label>
                            <input required class="form-control" id="3" placeholder="" name="monitor[tela]" type="text" value="{{ monitor.tela }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="4">
                                Nfe
                            </label>
                            <input required class="form-control" id="4" placeholder="" name="monitor[nfe]" type="text" value="{{ monitor.nfe }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="5">
                                Data Compra
                            </label>
                            <input required class="form-control" id="5" placeholder="" name="monitor[data_compra]" type="date" value="{{ monitor.data_compra }}">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="10">
                                Valor
                            </label>
                            <input required class="form-control" id="10" placeholder="" name="monitor[valor]" type="text" value="{{ monitor.valor }}">
                        </div>

                        <br>
                        <div class="row">
                            <div class="col-xs-2">
                                <label class="control-label" for="4">
                                    Num Patrimônio
                                </label>
                                <input required type="text" class="form-control" name="patrimonio[num_patrimonial]" value="{{ monitor.Patrimonio().num_patrimonial }}">
                            </div>
                            <div class="col-xs-3">
                                <label class="control-label" for="4">
                                    Serial
                                </label>
                                <input required type="text" class="form-control" name="patrimonio[serial]" value="{{ monitor.Patrimonio().serial }}">
                            </div>
                            <div class="col-xs-4">
                                <label class="control-label" for="4">
                                    Funcionário | Setor
                                </label>
                                <select class="js-example-basic-single form-control" name="patrimonio[funcionario_id]" id="1">
                                    <option value="{{  monitor.Patrimonio().funcionario_id }}"> {{ monitor.Patrimonio().Funcionario().nome }} || {{  monitor.Patrimonio().Funcionario().Setor().nome }}</option>
                                    {% for funcionario in funcionarios %}
                                        <option value="{{  funcionario.id }}"> {{ funcionario.nome }} || {{  funcionario.Setor().nome }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-xs-3">
                                <label class="control-label" for="4">
                                    Local
                                </label>
                                <select class="js-example-basic-single form-control" name="patrimonio[local_id]" id="1">
                                    <option value="{{  monitor.Patrimonio().local_id }}"> {{ monitor.Patrimonio().Local().nome }}</option>
                                    {% for local in locais %}
                                        <option value="{{  local.id }}"> {{ local.nome }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <br>
                        <input name="id" type="hidden" value="{{  monitor.id }}">
                        <button type="submit" class="btn btn-primary">
                            Cadastrar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}