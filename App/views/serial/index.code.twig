{% extends view('app') %}

{% block content %}

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Serial <a href="/licenca/serial/novo?id={{ licenca }}" class="fa fa-plus pull-right"></a></h3>
                    </div>
                    <div class="panel-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Serial</th>
                                <th>Data Vencimento</th>
                                <th>Computador</th>
                                <th>#</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for  serial in results %}
                                <tr>
                                    <td>{{ serial.id }}</td>
                                    <td>{{ serial.numero }}</td>
                                    <td>{{ serial.data_vencimento }}</td>
                                    <td></td>
                                    <td>
                                        <a href="/licenca/serial/editar?id={{ serial.id }}"  class="fa fa-edit text-info"    ></a>
                                        <a href="/licenca/serial/deletar?id={{ serial.id }}" class="fa fa-trash text-danger" ></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}