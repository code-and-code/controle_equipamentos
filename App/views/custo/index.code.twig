{% extends view('app') %}

{% block content %}

        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Centro de custo <a href="/custo/novo" class="fa fa-plus pull-right"></a></h3>
                    </div>
                    <div class="panel-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>#</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for  custo in results %}
                                <tr>
                                    <td>{{ custo.id }}</td>
                                    <td>{{ custo.nome }}</td>
                                    <td>
                                        <a href="custo/editar?id={{ custo.id }}"  class="fa fa-edit text-info"    ></a>
                                        <a href="custo/deletar?id={{ custo.id }}" class="fa fa-trash text-danger" ></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}