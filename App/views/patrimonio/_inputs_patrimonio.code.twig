<div class="form-group">
    <label class="control-label" for="9">
        NFe
    </label>
    <input required class="form-control" id="9" placeholder="" name="patrimonio[nfe]" type="text" value="{{ objeto.Patrimonio.nfe }}">
</div>

<div class="row">
    <div class="col-xs-4">
        <label class="control-label" for="4">
            Data Compra
        </label>
        <input required class="form-control" id="11" placeholder="" name="patrimonio[data_compra]" type="date" value="{{ objeto.Patrimonio.data_compra }}" >
    </div>
    <div class="col-xs-4">
        <label class="control-label" for="4">
            Valor
        </label>
        <input required class="form-control" id="10" placeholder="" name="patrimonio[valor]" type="text" value="{{ objeto.Patrimonio.valor }}">
    </div>
    <div class="col-xs-4">
        <label class="control-label" for="4">
            Centro De Custo
        </label>
        <select class="js-example-basic-single form-control" name="patrimonio[centro_custo_id]" id="1" >
            {% if objeto %}
                <option value="{{  objeto.Patrimonio.centro_custo_id }}"> {{ objeto.Patrimonio.Custo.nome }}</option>
            {% endif %}
            {% for custo in custos %}
                <option value="{{  custo.id }}"> {{ custo.nome }}</option>
            {% endfor %}
        </select>
    </div>
</div>
<br>
<div class="row">
    <div class="col-xs-2">
        <label class="control-label" for="4">
            Num Patrimônio
        </label>
        <input required type="text" class="form-control" name="patrimonio[num_patrimonial]" value="{{ objeto.Patrimonio.num_patrimonial }}">
    </div>
    <div class="col-xs-3">
        <label class="control-label" for="4">
            Serial
        </label>
        <input required type="text" class="form-control" name="patrimonio[serial]" value={{ objeto.Patrimonio.serial }}>
    </div>
    <div class="col-xs-4">
        <label class="control-label" for="4">
            Funcionário | Setor
        </label>
        <select class="js-example-basic-single form-control" name="patrimonio[funcionario_id]" id="1">
            <option value='0'>Não Possui</option>
            {% if objeto %}
                <option value="{{  objeto.Patrimonio.funcionario_id }}" selected> {{ objeto.Patrimonio.Funcionario.nome }} || {{  objeto.Patrimonio.Funcionario.Setor.nome }}</option>
            {% endif %}
            {% for funcionario in funcionarios %}
                <option value="{{  funcionario.id }}"> {{ funcionario.nome }} || {{  funcionario.Setor.nome }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="col-xs-3">
        <label class="control-label" for="4">
            Local
        </label>
        <select class="js-example-basic-single form-control" name="patrimonio[local_id]" id="1">
            {% if objeto %}
                <option value="{{  objeto.Patrimonio.local_id }}"> {{ objeto.Patrimonio.Local.nome }}</option>
            {% endif %}
            {% for local in locais %}
                <option value="{{  local.id }}"> {{ local.nome }}</option>
            {% endfor %}
        </select>
    </div>
</div>

<input required  type="hidden" name="id" value="{{ objeto.id }}">
<br>